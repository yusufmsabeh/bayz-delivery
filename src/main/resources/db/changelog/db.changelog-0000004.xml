<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="add_status_column" author="bayzdelivery">
        <sql endDelimiter=";">
            CREATE TYPE status_enum AS ENUM ('BUSY', 'FREE');
        </sql>
        <sql endDelimiter=";">
            CREATE CAST (character varying AS status_enum) with inout as assignment;
        </sql>
        <addColumn tableName="person">
            <column name="status" type="status_enum"  defaultValue="FREE" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>