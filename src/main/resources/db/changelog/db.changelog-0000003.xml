<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="add_type_column" author="bayzdelivery">
        <sql endDelimiter=";">
            CREATE TYPE type_enum AS ENUM ('CUSTOMER', 'DELIVERY_MAN');
        </sql>
        <sql endDelimiter=";">
            CREATE CAST (character varying AS type_enum) with inout as assignment;
        </sql>
        <addColumn tableName="person">
            <column name="type" type="type_enum"  defaultValue="CUSTOMER" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>